<Page
    x:Class="ShipWorks.Installer.Views.InstallPath"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShipWorks.Installer.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Install Path"
    d:DesignHeight="450"
    d:DesignWidth="300"
    DataContext="{Binding Path=InstallPathViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock>Install Path:</TextBlock>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBox Width="300"/>
                <Button Margin="10,0,0,0" Padding="5,2">Browse</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <CheckBox/>
                <TextBlock Margin="10,0,0,0" Text="Create Desktop Shortcut"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Margin="10,0" Command="{Binding NextCommand}">Next</Button>
            <Button IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</Page>