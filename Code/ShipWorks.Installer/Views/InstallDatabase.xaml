<Page
    x:Class="ShipWorks.Installer.Views.InstallDatabase"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShipWorks.Installer.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:c="clr-namespace:ShipWorks.Installer.Controls"
    Title="InstallDatabase"
    d:DesignHeight="300"
    d:DesignWidth="300"
    DataContext="{Binding Path=InstallDatabaseViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBlock Text="Installing SQL directories..." />
            <c:WaitSpinner BorderBrush="{x:Null}" HorizontalAlignment="Left" Margin="100,10"/>
            <TextBlock Text="Your database instance can go up to 10GB in size, so you don't need to worry about running our of space any time soon." TextWrapping="Wrap" Margin="0,10"/>
            <TextBlock Text="It just Works." Margin="0,10"/>
            <Button Command="{Binding NextCommand}" Content="Next" Margin="0,100,0,0"/>
        </StackPanel>
    </Grid>
</Page>