<Page
    x:Class="ShipWorks.Installer.Views.InstallShipworks"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShipWorks.Installer.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:fa5="http://schemas.fontawesome.com/icons/"
    Title="InstallShipworks"
    d:DesignHeight="600"
    d:DesignWidth="575"
    DataContext="{Binding Path=InstallShipworksViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock  Grid.Column="1" Style="{StaticResource Header}" Text="Install ShipWorks" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="0,10">
            <TextBlock.TextDecorations>
                <TextDecoration/>
            </TextBlock.TextDecorations>
        </TextBlock>
            <TextBlock Text="Installing ShipWorks..." />
            <fa5:FontAwesome Icon="Solid_Spinner"
                         FontSize="40"
                         Foreground="#2A67AB" 
                         Grid.Column="1" 
                         VerticalAlignment="Center" 
                         HorizontalAlignment="Center"
                         Spin="True"
                         SpinDuration="1.5"/>
            <TextBlock Text="Super fast label speed, automated inventory management, barcode scanning, batch processing...and that's just scratching the surface." 
                       TextWrapping="Wrap" 
                       Margin="0,10"/>
            <TextBlock Text="It just Works." Margin="0,10"/>
        </StackPanel>
</Page>