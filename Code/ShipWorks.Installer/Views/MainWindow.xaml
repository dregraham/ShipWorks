<Window
    x:Class="ShipWorks.Installer.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:command="http://www.galasoft.ch/mvvmlight"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShipWorks.Installer.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Main Window"
    Width="800"
    Height="450"
    DataContext="{Binding Source={StaticResource Locator}, Path=MainViewModel}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d" 
    Loaded="Window_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" ></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListBox Width="175" Grid.Column="0" BorderThickness="0" HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal">
                <TextBlock><Run Text="System Check "/></TextBlock>
                <Border Width="10"/>
                <TextBlock Text="&#xE10B;" Visibility="{Binding Source={StaticResource Locator}, Path=MainViewModel.SystemCheckVisibility}" Foreground="Green" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="13"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock><Run Text="EULA Agreement " /></TextBlock>
                <Border Width="10"/>
                <TextBlock Text="&#xE10B;" Visibility="{Binding Source={StaticResource Locator}, Path=MainViewModel.EulaFinishedVisibility}" Foreground="Green" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="13"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock><Run Text="Install Path"/></TextBlock>
                <Border Width="10"/>
                <TextBlock Text="&#xE10B;" Visibility="{Binding Source={StaticResource Locator}, Path=MainViewModel.InstallPathFinishedVisibility}" Foreground="Green" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="13"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock><Run Text="Login"/></TextBlock>
                <Border Width="10"/>
                <TextBlock Text="&#xE10B;" Visibility="{Binding Source={StaticResource Locator}, Path=MainViewModel.LoginFinishedVisibility}" Foreground="Green" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="13"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock><Run Text="Installation"/></TextBlock>
                <Border Width="10"/>
                <TextBlock Text="&#xE10B;" Visibility="{Binding Source={StaticResource Locator}, Path=MainViewModel.InstallationFinishedVisibility}" Foreground="Green" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="13"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock><Run Text="  - Location Configuration "/></TextBlock>
                <Border Width="10"/>
                <TextBlock Text="&#xE10B;" Visibility="{Binding Source={StaticResource Locator}, Path=MainViewModel.LocationConfigVisibility}" Foreground="Green" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="13"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="  - Install ShipWorks "/>
                <Border Width="10"/>
                <TextBlock Text="&#xE10B;" Visibility="{Binding Source={StaticResource Locator}, Path=MainViewModel.InstallShipworksVisibility}" Foreground="Green" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="13"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="  - Install Database "/>
                <Border Width="10"/>
                <TextBlock Text="&#xE10B;" Visibility="{Binding Source={StaticResource Locator}, Path=MainViewModel.InstallDatabaseVisibility}" Foreground="Green" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="13"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Use ShipWorks"/>
                <Border Width="10"/>
                <TextBlock Text="&#xE10B;" Visibility="{Binding Source={StaticResource Locator}, Path=MainViewModel.UseShipWorksVisibility}" Foreground="Green" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="13"/>
            </StackPanel>
        </ListBox>
        <Frame Grid.Column="1"
            x:Name="MainFrame"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            NavigationUIVisibility="Hidden" />
    </Grid>
</Window>