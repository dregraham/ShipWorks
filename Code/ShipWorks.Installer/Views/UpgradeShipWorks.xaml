<Page
    x:Class="ShipWorks.Installer.Views.UpgradeShipWorks"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShipWorks.Installer.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:fa5="http://schemas.fontawesome.com/icons/"
    Title="UpgradeShipWorks"
    d:DesignHeight="300"
    d:DesignWidth="300"
    DataContext="{Binding Path=UpgradeShipWorksViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBlock Text="Upgrading ShipWorks" />
            <fa5:FontAwesome Icon="Solid_Spinner"
                         FontSize="40"
                         Foreground="#2A67AB" 
                         Grid.Column="1" 
                         VerticalAlignment="Center" 
                         HorizontalAlignment="Left"
                         Margin="40,4,0,0"
                         Spin="True"
                         SpinDuration="1.5"/>
            <TextBlock Text="Super fast label speed, automated inventory management, barcode scanning, batch processing...and that's just scratching the surface." 
                       TextWrapping="Wrap" 
                       Margin="0,10"/>
            <TextBlock Text="It just Works." Margin="0,10"/>
        </StackPanel>
    </Grid>
</Page>