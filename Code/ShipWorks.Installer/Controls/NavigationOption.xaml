<UserControl x:Class="ShipWorks.Installer.Controls.NavigationOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa5="http://schemas.fontawesome.com/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Style="{StaticResource StandardText}" x:Name="Label" Text="Option 1" VerticalAlignment="Center" FontSize="15" Foreground="Black"/>
        <fa5:FontAwesome x:Name="CurrentIcon"
                         FontSize="15"
                         Icon="None" 
                         Foreground="Green" 
                         Grid.Column="1" 
                         VerticalAlignment="Center" Margin="5,4,0,0"/>
    </Grid>
</UserControl>
