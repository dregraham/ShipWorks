<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/ShipWorks.UI;component/Styles/Colors.xaml" />
        <ResourceDictionary Source="/ShipWorks.UI;component/Styles/Sizes.xaml" />
        <ResourceDictionary Source="/ShipWorks.UI;component/Styles/Controls/ButtonStyle.xaml"/>
        <ResourceDictionary Source="/ShipWorks.UI;component/Styles/Controls/DatePickerStyle.xaml"/>
        <ResourceDictionary Source="/ShipWorks.UI;component/Styles/Controls/DataGridStyle.xaml"/>
        <ResourceDictionary Source="/ShipWorks.UI;component/Styles/Controls/ExpanderStyle.xaml" />
        <ResourceDictionary Source="/ShipWorks.UI;component/Styles/Controls/GridStyle.xaml" />
        <ResourceDictionary Source="/ShipWorks.UI;component/Styles/Controls/ImageStyle.xaml"/>
        <ResourceDictionary Source="/ShipWorks.UI;component/Styles/ErrorTemplates.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="TextBlock.Empty" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#FF696969" />
        <Setter Property="TextWrapping" Value="WrapWithOverflow" />
    </Style>

    <Style x:Key="TextBlock.SectionHeader" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="0, 5, 5, 5" />
    </Style>
</ResourceDictionary>