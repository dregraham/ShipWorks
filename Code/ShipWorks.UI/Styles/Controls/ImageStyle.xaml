<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Image.Icon" TargetType="Image">
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="Height" Value="16" />
        <Setter Property="Width" Value="16" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="Image.InfoTip" BasedOn="{StaticResource Image.Icon}" TargetType="Image">
        <Setter Property="Height" Value="16" />
        <Setter Property="Width" Value="16" />
        <Setter Property="Source" Value="/ShipWorks.Core;component/Resources/InfoTip.png" />
    </Style>

    <Style x:Key="Image.Info20x20" BasedOn="{StaticResource Image.Icon}" TargetType="Image">
        <Setter Property="Height" Value="20" />
        <Setter Property="Width" Value="20" />
        <Setter Property="Source" Value="/ShipWorks.Core;component/Resources/info_20x20.png" />
    </Style>

    <Style x:Key="Image.Copy" BasedOn="{StaticResource Image.Icon}" TargetType="Image">
        <Setter Property="Source" Value="/ShipWorks.Core;component/Resources/copy.png" />
    </Style>
</ResourceDictionary>