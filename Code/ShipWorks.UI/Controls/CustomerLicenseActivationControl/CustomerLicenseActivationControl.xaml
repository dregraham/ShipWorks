<UserControl x:Class="ShipWorks.UI.Controls.CustomerLicenseActivationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShipWorks.UI.Controls"
             FontFamily="Tahoma"
             FontSize="11"
             d:DataContext="{d:DesignInstance local:CustomerLicenseActivationViewModel}"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" HorizontalContentAlignment="Right">Username:</Label>
        <Label Grid.Row="2" Grid.Column="0" HorizontalContentAlignment="Right">Password:</Label>

        <TextBox Grid.Row="0" Grid.Column="1" Width="300" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Grid.Row="2" Grid.Column="1" Width="300" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</UserControl>
