<UserControl x:Class="ShipWorks.UI.Controls.ArchiveNotificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShipWorks.UI.Controls"
             
             FontFamily="Tahoma"
             FontSize="8.25 pt"
             FontStyle="Normal"
             FontStretch="Normal"
             FontWeight="Normal"
             
             mc:Ignorable="d" 
             d:DesignHeight="52" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ShipWorks.UI;component/Styles/GlobalStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="Expander" BasedOn="{StaticResource Expander.Style}" />
            <Style TargetType="Border" BasedOn="{StaticResource Border.Expander}" />
        </ResourceDictionary>
    </UserControl.Resources>
    <local:NotificationBorder BorderBrush="{StaticResource Yellow}"
                              Margin="2"
                              Background="White"
Padding="8,4"
                            IconControl="!"
                            IconFontFamily="Tahoma">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="110*" />
                <ColumnDefinition Width="47*"/>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Archive Database"
                    FontSize="16"
                    FontWeight="Bold"
                       VerticalAlignment="Center"
                    Margin="0,3,8,3">
            </TextBlock>
            <TextBlock Grid.Column="1"
                    Text="This is an archive database"
                       VerticalAlignment="Center"
                    FontSize="16" Grid.ColumnSpan="2" Margin="0,3" />
            <Button Grid.Column="3" Padding="4"
                       VerticalAlignment="Center" Margin="0,2">Return to live database</Button>
        </Grid>
    </local:NotificationBorder>
</UserControl>
