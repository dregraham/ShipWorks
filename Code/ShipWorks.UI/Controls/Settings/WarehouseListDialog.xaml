<Window x:Class="ShipWorks.UI.Controls.Settings.WarehouseListDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:ShipWorks.UI.Controls"
        xmlns:vc="clr-namespace:ShipWorks.UI.ValueConverters"
        xmlns:local="clr-namespace:ShipWorks.UI.Controls.Settings"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:DesignModeWarehouseListViewModel, IsDesignTimeCreatable=True}"
        Title="Choose a warehouse"

        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False"

        FontFamily="Tahoma"
        FontSize="8.25 pt"
        FontStyle="Normal"
        FontStretch="Normal"
        FontWeight="Normal"

        Height="240" Width="450"
        MinHeight="120"
        MinWidth="320">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ShipWorks.UI;component/Styles/GlobalStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <vc:BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="8" Grid.IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Margin="0,0,0,4">
            Select the warehouse that should be linked with this ShipWorks database
        </TextBlock>
        <ListBox Grid.Row="1"
                 ItemsSource="{Binding Warehouses}"
                 SelectedItem="{Binding SelectedWarehouse}"
                 HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Name" />
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Address" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    Margin="0, 0, 18, 4"
                                    VerticalAlignment="Bottom">
                            <TextBlock FontSize="14" Text="{Binding Name}" />
                            <TextBlock Text="{Binding Code}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    Margin="0, 0, 18, 4"
                                    VerticalAlignment="Bottom">
                            <TextBlock Text="{Binding Street}" />
                            <TextBlock>
                                <Run Text="{Binding City}" />, <Run Text="{Binding State}" /> <Run Text="{Binding Zip}" />
                            </TextBlock>
                        </StackPanel>

                        <TextBlock Grid.Column="2"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   Visibility="{Binding IsAlreadyLinked, Converter={StaticResource ResourceKey=BooleanToVisibility}}">Already Linked</TextBlock>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <controls:AlignmentWrapPanel Grid.Row="2"
                               Margin="0, 8, 0, 0">
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Padding="8, 4"
                        Style="{StaticResource Button.Link}"
                        Foreground="{StaticResource Blue}"
                        VerticalAlignment="Center"
                        IsCancel="True"
                        Margin="12,0"
                    Command="{Binding CancelLink}">Cancel</Button>

                <Button Grid.Row="2"
                    Padding="8, 4"
                    IsDefault="True"
                    Command="{Binding ConfirmLink}">Link</Button>
            </StackPanel>
        </controls:AlignmentWrapPanel>
    </Grid>
</Window>
