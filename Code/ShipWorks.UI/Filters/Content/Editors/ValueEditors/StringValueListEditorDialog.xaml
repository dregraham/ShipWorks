<Window x:Class="ShipWorks.UI.Filters.Content.Editors.ValueEditors.StringValueListEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Values" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0"  
                 Text="{Binding Items}"
                 Margin="8,8,8,0"
                 AcceptsReturn="True"
                 FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}"/>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Command="{Binding ConfirmEdit}" 
                    MinWidth="50" 
                    Margin="8"
                    Padding="8,4">OK</Button>
            <Button Command="{Binding CancelEdit}" 
                    IsCancel="True"
                    MinWidth="50" 
                    Margin="8"
                    Padding="8,4">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
