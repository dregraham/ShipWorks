<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Color x:Key="BorderColor">#d7d7d7</Color>
    <Color x:Key="IconColor">#4b4b4b</Color>
    <Color x:Key="ControlTextColor">#676767</Color>
    <SolidColorBrush x:Key="BorderBrushColor" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="IconBrushColor" Color="{StaticResource IconColor}"/>
    <SolidColorBrush x:Key="ControlTextBrushColor" Color="{StaticResource ControlTextColor}"/>
    
    
    <LinearGradientBrush x:Key="ButtonBackgroundGradient" EndPoint="0.5, 0" StartPoint=".5,1">
        <GradientStop Color="#fdfdfd" Offset="1"/>
        <GradientStop Color="#f5f5f5" Offset="0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="InputControlBackgroundGradient" EndPoint="0.5, 0" StartPoint=".5,1">
        <GradientStop Color="#f5f5f5" Offset="1"/>
        <GradientStop Color="White" Offset="0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="LargePrimaryButtonGradient" EndPoint="0.5, 0" StartPoint=".5,1">
        <GradientStop Color="#528ec6" Offset="1"/>
        <GradientStop Color="#0259ab" Offset="0"/>
    </LinearGradientBrush>
</ResourceDictionary>