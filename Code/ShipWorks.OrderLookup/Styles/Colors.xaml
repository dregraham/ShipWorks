<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ShipWorks.OrderLookup.Styles">
    
    <Color x:Key="BorderColor">#d7d7d7</Color>
    <SolidColorBrush x:Key="BorderBrushColor" Color="{StaticResource BorderColor}"/>

    <LinearGradientBrush x:Key="ButtonBackgroundGradient" EndPoint="0.5, 0" StartPoint=".5,1">
        <GradientStop Color="#fdfdfd" Offset="1"/>
        <GradientStop Color="#f5f5f5" Offset="0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="InputControlBackgroundGradient" EndPoint="0.5, 0" StartPoint=".5,1">
        <GradientStop Color="#f5f5f5" Offset="1"/>
        <GradientStop Color="White" Offset="0"/>
    </LinearGradientBrush>
</ResourceDictionary>