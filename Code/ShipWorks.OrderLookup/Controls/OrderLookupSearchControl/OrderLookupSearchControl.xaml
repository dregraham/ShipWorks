<UserControl
    x:Class="ShipWorks.OrderLookup.Controls.OrderLookupSearchControl.OrderLookupSearchControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:orderLookupSearchControl="clr-namespace:ShipWorks.OrderLookup.Controls.OrderLookupSearchControl"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:sw="http://schemas.shipworks.com/sw"
    xmlns:ui="http://schemas.shipworks.com/ui"
    d:DataContext="{d:DesignInstance orderLookupSearchControl:OrderLookupSearchViewModel}"
    d:DesignWidth="1000"
    FontFamily="/ShipWorks.OrderLookup;component/#Roboto"
    FontSize="20px"
    Foreground="Black"
    Loaded="OnLoad"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ShipWorks.OrderLookup;component/Styles/OrderLookupStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ui:BooleanToVisibilityConverter x:Key="BoolToVis" />
            <ui:VisibleWhenEqualToParameterConverter x:Key="VisibleWhenNotEqualToParameter" Invert="true" />

            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style TargetType="{x:Type TextBox}">
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style x:Key="LargePrimaryButton" TargetType="Button">
                <Setter Property="Height" Value="32" />
                <Setter Property="Width" Value="207" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Background="{StaticResource LargePrimaryButtonGradient}"
                                BorderBrush="#0e497f"
                                BorderThickness="1px"
                                CornerRadius="2">
                                <ContentPresenter
                                    x:Name="contentPresenter"
                                    Margin="{TemplateBinding Padding}"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                    Content="{TemplateBinding Content}"
                                    ContentTemplate="{TemplateBinding ContentTemplate}" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="SmallSecondaryButton" TargetType="Button">
                <Setter Property="Height" Value="32" />
                <Setter Property="Width" Value="121" />
                <Setter Property="Foreground" Value="#4A4A4A" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Background="#E6E6E6"
                                BorderBrush="#D4D4D4"
                                BorderThickness="1px"
                                CornerRadius="2">
                                <ContentPresenter
                                    x:Name="contentPresenter"
                                    Margin="{TemplateBinding Padding}"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                    Content="{TemplateBinding Content}"
                                    ContentTemplate="{TemplateBinding ContentTemplate}" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,8,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,0,10,0"
                FontSize="20"
                FontWeight="Bold"
                Foreground="Black"
                Text="Order Number" />

            <UserControl Grid.Column="1">
                <Border
                    HorizontalAlignment="Stretch"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            x:Name="SearchBox"
                            Grid.Column="0"
                            Height="32"
                            MinWidth="100"
                            VerticalContentAlignment="Center"
                            Background="{StaticResource InputControlBackgroundGradient}"
                            BorderBrush="{x:Null}"
                            BorderThickness="0"
                            FontSize="20"
                            ui:Focus.WhenMessageReceived="{x:Type sw:FocusQuickSearchMessage}"
                            Text="{Binding OrderNumber, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding Path=GetOrderCommand}" />
                            </TextBox.InputBindings>
                        </TextBox>
                        <StackPanel Grid.Column="1" Orientation="Vertical">
                            <Separator
                                Height="32"
                                Margin="0"
                                Background="{StaticResource BorderColor}"
                                Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                        </StackPanel>
                        <Button
                            Grid.Column="2"
                            Background="#e6e6e6"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="0"
                            Command="{Binding GetOrderCommand}">
                            <Canvas
                                Width="13"
                                Height="13"
                                Margin="10,6,10,5">
                                <Canvas.LayoutTransform>
                                    <ScaleTransform ScaleX="1.3" ScaleY="1.3" />
                                </Canvas.LayoutTransform>
                                <Ellipse
                                    Width="11.3"
                                    Height="11.3"
                                    Stroke="#FF222222"
                                    StrokeThickness="2" />
                                <Path
                                    Data="M8.5553923 8.5553923 L11.7373728 11.7373728"
                                    Stroke="#FF222222"
                                    StrokeEndLineCap="Round"
                                    StrokeStartLineCap="Flat"
                                    StrokeThickness="2" />
                            </Canvas>
                        </Button>
                    </Grid>
                </Border>
            </UserControl>
        </Grid>

        <Grid
            Grid.Row="0"
            Grid.Column="1"
            Margin="3,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Margin="0,0,10,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Command="{Binding ResetCommand}"
                Content="Clear"
                FontSize="14"
                Style="{StaticResource Link}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <ui:SetFocusTrigger TargetName="SearchBox" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>

            <Grid Grid.Column="1" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    MinWidth="75"
                    HorizontalAlignment="Right"
                    FontWeight="Bold"
                    Text="{Binding ShipmentModel.TotalCost, StringFormat='Total Cost: {0:c}', UpdateSourceTrigger=PropertyChanged}">

                    <TextBlock.Visibility>
                        <Binding Converter="{StaticResource VisibleWhenNotEqualToParameter}" Path="ShipmentModel.TotalCost">
                            <Binding.ConverterParameter>
                                <system:Decimal>0</system:Decimal>
                            </Binding.ConverterParameter>
                        </Binding>
                    </TextBlock.Visibility>
                </TextBlock>
            </Grid>
        </Grid>

        <Grid
            Grid.Row="0"
            Grid.Column="2"
            Margin="9,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                HorizontalAlignment="Left"
                Command="{Binding CreateLabelCommand}"
                Content="Create Label"
                Style="{StaticResource LargePrimaryButton}"
                Visibility="{Binding ShowCreateLabel, Converter={StaticResource BoolToVis}}" />
            <Button
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderBrush="{x:Null}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Path
                        Grid.Column="0"
                        Margin="0,0,0,2"
                        Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"
                        Fill="Black" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        FontFamily="ShipWorks.OrderLookup;component/#Roboto"
                        FontSize="14"
                        Text="Settings" />
                </Grid>
            </Button>
        </Grid>

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="0,8,0,0"
            Text="{Binding SearchErrorMessage}"
            Visibility="{Binding SearchError, Converter={StaticResource BoolToVis}}" />
    </Grid>
</UserControl>
