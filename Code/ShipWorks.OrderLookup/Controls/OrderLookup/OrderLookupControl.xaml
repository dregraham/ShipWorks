<UserControl x:Class="ShipWorks.OrderLookup.Controls.OrderLookup.OrderLookupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:customs="clr-namespace:ShipWorks.OrderLookup.Controls.Customs"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dd="urn:gong-wpf-dragdrop"
             xmlns:details="clr-namespace:ShipWorks.OrderLookup.Controls.ShipmentDetails"
             xmlns:from="clr-namespace:ShipWorks.OrderLookup.Controls.From"
             xmlns:labelOptions="clr-namespace:ShipWorks.OrderLookup.Controls.LabelOptions"
             xmlns:local="clr-namespace:ShipWorks.OrderLookup.Controls.OrderLookup"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:orderLookupSearchControl="clr-namespace:ShipWorks.OrderLookup.Controls.OrderLookupSearchControl"
             xmlns:rating="clr-namespace:ShipWorks.OrderLookup.Controls.Rating"
             xmlns:ratingPanel="clr-namespace:ShipWorks.Shipping.UI.RatingPanel;assembly=ShipWorks.Shipping.UI"
             xmlns:reference="clr-namespace:ShipWorks.OrderLookup.Controls.Reference"
             xmlns:to="clr-namespace:ShipWorks.OrderLookup.Controls.To"
             d:DataContext="{d:DesignInstance local:OrderLookupViewModel}"
             FontFamily="/ShipWorks.OrderLookup;component/#Roboto"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ShipWorks.OrderLookup;component/Styles/OrderLookupStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type local:OrderLookupControl}">
                <Setter Property="Background" Value="{StaticResource OrderLookupBackgroundColor}"/>
            </Style>

            <Style BasedOn="{StaticResource Expander.Style}" TargetType="{x:Type Expander}" />
            <DataTemplate DataType="{x:Type from:OrderLookupFromViewModel}">

                <from:OrderLookupFromControl />

            </DataTemplate>
            <DataTemplate DataType="{x:Type to:OrderLookupToViewModel}">
                <to:OrderLookupToControl />
            </DataTemplate>
            <DataTemplate DataType="{x:Type labelOptions:OrderLookupLabelOptionsControlViewModel}">
                <Expander Header="Label Options">
                    <labelOptions:OrderLookupLabelOptionsControl />
                </Expander>
            </DataTemplate>
            <DataTemplate DataType="{x:Type reference:ReferenceViewModel}">
                <Expander Header="Reference">
                    <reference:ReferenceControl />
                </Expander>
            </DataTemplate>
            <DataTemplate DataType="{x:Type details:OrderLookupShipmentDetailsViewModel}">
                <Expander Header="Shipment Details" IsExpanded="True">
                    <details:OrderLookupShipmentDetailsControl />
                </Expander>
            </DataTemplate>
            <DataTemplate DataType="{x:Type ratingPanel:RatingPanelViewModel}">
                <Expander Header="Rates" Padding="0" IsExpanded="True">
                    <rating:OrderLookupRatingControl />
                </Expander>
            </DataTemplate>
            <DataTemplate DataType="{x:Type customs:OrderLookupCustomsControlViewModel}">
                <customs:OrderLookupCustomsControl />
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <orderLookupSearchControl:OrderLookupSearchControl
                Grid.Row="0"
                Margin="10"
                DataContext="{Binding OrderLookupSearchViewModel}" />
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="ItemsControl">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <Setter Property="dd:DragDrop.IsDragSource" Value="True" />
                        <Setter Property="dd:DragDrop.IsDropTarget" Value="True" />
                    </Style>
                    <Style TargetType="GridSplitter">
                        <Setter Property="HorizontalAlignment" Value="Right" />
                        <Setter Property="VerticalAlignment" Value="Stretch" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="ShowsPreview" Value="True" />
                        <Setter Property="Width" Value="3" />
                    </Style>
                </Grid.Resources>

                <ItemsControl Grid.Column="0" ItemsSource="{Binding Column1}" />
                <ItemsControl Grid.Column="1" ItemsSource="{Binding Column2}" />
                <ItemsControl Grid.Column="2" ItemsSource="{Binding Column3}" />

                <GridSplitter Grid.Column="0" />
                <GridSplitter Grid.Column="1" />
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
