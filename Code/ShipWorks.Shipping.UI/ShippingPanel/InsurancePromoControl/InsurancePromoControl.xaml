<UserControl x:Class="ShipWorks.Shipping.UI.ShippingPanel.InsurancePromoControl.InsurancePromoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShipWorks.Shipping.UI.ShippingPanel.InsurancePromoControl"
             mc:Ignorable="d" d:DesignWidth="300" Height="24.538">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ShipWorks.Shipping.UI;component/Styles/Controls/LinkButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Height="20" Orientation="Horizontal">
        <Image Width="16" Height="16" Margin="0 0 0 0" 
                Visibility="{Binding InfoTipVisibility, FallbackValue=Visible}"
                VerticalAlignment="Bottom"
                Source="/ShipWorks.Core;component/Resources/InfoTip.png">
            <Image.ToolTip>
                <ToolTip>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Image Grid.Row="0" Grid.Column="0" Width="22" Height="22" Margin="2 4 5 2" 
                            Source="/ShipWorks.Core;component/Resources/info_20x20.png"
                            VerticalAlignment="Top"
                            Stretch="None"/>

                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical">
                            <TextBlock Text="{Binding InsuranceInfoTipCaptionText}" FontWeight="Bold"></TextBlock>
                            <TextBlock Text="{Binding InsuranceInfoTipDisplayText}"></TextBlock>
                        </StackPanel>
                    </Grid>
                </ToolTip>
            </Image.ToolTip>
        </Image>

        <TextBlock Margin="5 0 0 0" 
                        Visibility="{Binding CostVisibility, FallbackValue=Visible}"
                        Text="{Binding Path=InsuranceCostDisplayText, FallbackValue='$0.55'}"></TextBlock>

        <Button Margin="5"
                Visibility="{Binding LinkVisibility, FallbackValue=Visible}"
                Content="{Binding Path=InsuranceLinkDisplayText, FallbackValue='$50.00'}"
                Style="{StaticResource LinkButtonStyle}"
                Command="{Binding ShowInsurancePromoDialogCommand}"
                />
    </StackPanel>
</UserControl>
