<UserControl x:Class="ShipWorks.Shipping.UI.ScaleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShipWorks.Shipping.UI"
             mc:Ignorable="d" 
             VerticalAlignment="Top">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/EmptyButtonStyle.xaml" />
                <ResourceDictionary Source="Templates/BlinkingRedErrorTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal">
        <Button Style="{StaticResource EmptyButtonStyle}">
            <Image Width="15" Source="pack://application:,,,/ShipWorks.Core;component/Resources/weigh.png"/>
        </Button>
        <Label Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}">
            (12 lb 2 oz)
        </Label>
    </StackPanel>
</UserControl>
