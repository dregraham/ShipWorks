<UserControl x:Class="ShipWorks.Shipping.UI.Settings.OneBalance.OneBalanceSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShipWorks.Shipping.UI.Settings.OneBalance"
             xmlns:ui="http://schemas.shipworks.com/ui"
             mc:Ignorable="d" 
             FontFamily="Tahoma"
             d:DesignHeight="450" 
             d:DesignWidth="800"
             BorderBrush="#FF8D9199"
             BorderThickness="1">
    <UserControl.Resources>
        <ui:EmptyMoneyConverter x:Key="EmptyMoney"/>
        <ui:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <ui:BooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter" Invert="True"/>
    </UserControl.Resources>
    <StackPanel HorizontalAlignment="Left">
        <TextBlock Text="Manage ShipWorks One Balance" FontSize="15" Margin="5,10,0,0" FontWeight="Bold"/>
        <Border Margin="50,30,0,0" BorderThickness="0,0,0,2" BorderBrush="DarkGray" MinWidth="500">
            <TextBlock Margin="0,0,0,10" Text="Account Overview" FontSize="12" FontWeight="SemiBold"/>
        </Border>
        <Grid HorizontalAlignment="Right" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Message}" Grid.ColumnSpan="2" FontSize="12" Foreground="#FFD32323" TextWrapping="Wrap" Visibility="{Binding ShowMessage, Converter={StaticResource BooleanToVisibilityConverter}}" MaxWidth="500"/>
            <TextBlock Text="Balance" FontSize="12" HorizontalAlignment="Left" Grid.Column="0" Visibility="{Binding ShowBalance, Converter={StaticResource InvertedBooleanToVisibilityConverter}}"/>
            <TextBlock Text="{Binding Balance, Converter={StaticResource EmptyMoney}}" FontSize="12" HorizontalAlignment="Right" Grid.Column="1" Margin="0,0,20,0" Visibility="{Binding ShowBalance, Converter={StaticResource InvertedBooleanToVisibilityConverter}}"/>
        </Grid>
        <Button HorizontalAlignment="Right" Margin="0,50,0,0">
            <TextBlock Text="Add Money" FontSize="12" Margin="5,2,5,2"/>
        </Button>
    </StackPanel>
</UserControl>
