<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.shipworks.com/ui">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/ShipWorks.UI;component/Styles/GlobalStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <ui:EnumDescriptionConverter x:Key="EnumDescription" />

    <DataTemplate x:Key="AmazonNotLinkedFootnoteViewModelTemplate">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Image Style="{StaticResource Image.Icon}"
                   Source="/Shipworks.Core;component/Resources/information2.png"/>
            <TextBlock Margin="6,1,0,0">
                ShipWorks could not retrieve
                <Run Text="{Binding ShipmentTypeCode, Converter={StaticResource EnumDescription}, Mode=OneWay}" />
                rates. For more info,
                <Hyperlink Command="{Binding ShowDialog}">click here</Hyperlink>.
            </TextBlock>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>