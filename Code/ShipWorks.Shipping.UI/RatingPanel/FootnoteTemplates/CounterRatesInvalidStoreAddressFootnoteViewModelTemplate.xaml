<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.shipworks.com/ui"
                    xmlns:local="clr-namespace:ShipWorks.Shipping.UI.RatingPanel.FootnoteTemplates">
    <ui:BooleanToVisibilityConverter x:Key="ShowWhenTrue" />
    <ui:BooleanToVisibilityConverter x:Key="HideWhenTrue" True="Collapsed" False="Visible" />

    <DataTemplate x:Key="CounterRatesInvalidStoreAddressFootnoteViewModelTemplate">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Image Source="/Shipworks.Core;component/Resources/flag_red.png"
                    Width="16"
                    Height="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
            <TextBlock Margin="6,1,0,0"
                       Visibility="{Binding CanEditStoreAddress,Converter={StaticResource ShowWhenTrue}}">
                ShipWorks needs your address to get rates.
                <Hyperlink Command="{Binding EditStoreAddress}">Enter address...</Hyperlink>
            </TextBlock>
            <TextBlock Margin="6,1,0,0"
                       Visibility="{Binding CanEditStoreAddress,Converter={StaticResource HideWhenTrue}}">
                ShipWorks needs your address to get rates.
            </TextBlock>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>