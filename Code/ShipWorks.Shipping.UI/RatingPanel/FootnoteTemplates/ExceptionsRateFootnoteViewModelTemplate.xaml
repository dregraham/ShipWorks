<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.shipworks.com/ui"
                    xmlns:local="clr-namespace:ShipWorks.Shipping.UI.RatingPanel.FootnoteTemplates">
    <DataTemplate x:Key="ExceptionsRateFootnoteViewModelTemplate">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Image Style="{DynamicResource Image.Icon}"
                   Source="/Shipworks.Core;component/Resources/error.png" />
            <TextBlock Margin="6,1,0,0">
                <Run Text="{Binding ErrorText}" />
                <Hyperlink Command="{Binding ShowMoreInformation}">More info...</Hyperlink>
            </TextBlock>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>