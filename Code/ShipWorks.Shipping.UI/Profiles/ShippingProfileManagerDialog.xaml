<ui:InteropWindow
    xmlns:ui="clr-namespace:Interapptive.Shared.UI;assembly=Interapptive.Shared" 
    x:Class="ShipWorks.Shipping.UI.Profiles.ShippingProfileManagerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShipWorks.Shipping.UI.Profiles"
        mc:Ignorable="d"
        Title="ShippingProfileManagerDialog" 
        Height="300" Width="500"
        Background="{x:Static SystemColors.ControlBrush}"
        d:DataContext="{d:DesignInstance local:ShippingProfileManagerDialogViewModel, IsDesignTimeCreatable=False}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ShipWorks.UI;component/Styles/GlobalStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Width" Value="120"/>
                <Setter Property="Height" Value="23"/>
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            </Style>
            
            <Style TargetType="Image">
                <Setter Property="Margin" Value="2"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="profileView"
                  Grid.Column="0" 
                  ItemsSource="{Binding ShippingProfiles, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True}"                  
                  SelectedItem="{Binding SelectedShippingProfile, UpdateSourceTrigger=PropertyChanged}">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn Header="Provider" Width="100" ></GridViewColumn>
                    <GridViewColumn Header="Profile Name" Width="100"></GridViewColumn>
                    <GridViewColumn Header="Keyboard Shortcut" Width="auto"></GridViewColumn>
                </GridView>
            </ListView.View>            
        </ListView>
        <Grid Grid.Column="1" Margin="10 0 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0"
                    Command="{Binding EditCommand}"
                    CommandParameter="{Binding SelectedShippingProfile}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="/Shipworks.Core;component/Resources/edit.png" Margin="2"/>
                    <TextBlock Grid.Column="1" Text="Edit" HorizontalAlignment="Center"></TextBlock>
                </Grid>
            </Button>
            <Button Grid.Row="1" Margin="0 10 0 0"
                    Command="{Binding AddCommand}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="/Shipworks.Core;component/Resources/add.png" Margin="2"/>
                    <TextBlock Grid.Column="1" Text="Add" HorizontalAlignment="Center"></TextBlock>
                </Grid>
            </Button>
            <Button Grid.Row="2" Margin="0 10 0 0"
                    Command="{Binding DeleteCommand}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="/Shipworks.Core;component/Resources/delete2.png" Margin="2"/>
                    <TextBlock Grid.Column="1" Text="Delete" HorizontalAlignment="Center"></TextBlock>
                </Grid>
            </Button>
            <Button Grid.Row="3" Margin="0 10 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="/Shipworks.Core;component/Resources/printer.png" Margin="2"/>
                    <TextBlock Grid.Column="1" Text="Print Barcodes" HorizontalAlignment="Center"></TextBlock>
                </Grid>
            </Button>
            <Button Grid.Row="4" VerticalAlignment="Bottom" Content="Close" HorizontalContentAlignment="Center"/>
        </Grid>
    </Grid>
</ui:InteropWindow>
