<Window x:Class="ShipWorks.Shipping.UI.Carriers.Amazon.SFP.Terms.AmazonSfpTermsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShipWorks.Shipping.UI.Carriers.Amazon.SFP.Terms"
        xmlns:bindableRichTextBox="clr-namespace:ShipWorks.UI.Controls.BindableRichTextBox;assembly=ShipWorks.UI"
        mc:Ignorable="d"
        Title="Amazon Buy Shipping API Terms &amp; Conditions"

        WindowStartupLocation="CenterOwner"
        WindowStyle="ThreeDBorderWindow"
        ShowInTaskbar="False"

        FontFamily="Tahoma"
        FontSize="8.25 pt"
        FontStyle="Normal"
        FontStretch="Normal"
        FontWeight="Normal"

        SizeToContent="Height"

        MinWidth="220"
        Width="840" 

        MaxHeight="500"
        MinHeight="300"
        Height="300">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ShipWorks.UI;component/Styles/GlobalStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
                Margin="6,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="1"
                  Margin="4,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto">
                    <bindableRichTextBox:BindableRichTextBox 
                        x:Name="termsTextBox"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        IsReadOnly="True"
                        Source="{Binding TermsUrl}"
                        >
                    </bindableRichTextBox:BindableRichTextBox>
                </ScrollViewer>
            </Grid>
        </Grid>

        <Border Grid.Row="1"
                Background="#F0F0F0"
                Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                    <Button Grid.Column="1"
                            MinWidth="80"
                            Padding="8, 4"
                            HorizontalAlignment="Right"
                            Command="{Binding Dismiss}"
                            IsDefault="True"
                            Content="Dismiss" />
                </StackPanel>

                <Button Grid.Column="1"
                        MinWidth="80"
                        Padding="8, 4"
                        HorizontalAlignment="Right"
                        Command="{Binding Accept}"
                        IsDefault="True"
                        Content="Accept" />
            </Grid>
        </Border>
    </Grid>
</Window>
