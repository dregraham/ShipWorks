<xsd:schema targetNamespace="http://www.ups.com/XMLSchema/XOLTWS/PromoDiscount/v1.0" xmlns:ups="http://www.ups.com/XMLSchema" xmlns:pd="http://www.ups.com/XMLSchema/XOLTWS/PromoDiscount/v1.0" xmlns:common="http://www.ups.com/XMLSchema/XOLTWS/Common/v1.0" xmlns:xsd="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
	<xsd:import namespace="http://www.ups.com/XMLSchema/XOLTWS/Common/v1.0" schemaLocation="common.xsd"/>
	<xsd:element name="PromoDiscountAgreementRequest">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element ref="common:Request"/>
				<xsd:element name="PromoCode" type="xsd:string"/>
				<xsd:element name="Locale" type="pd:LocaleType"/>
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
	<xsd:element name="PromoDiscountAgreementResponse">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element ref="common:Response"/>
				<xsd:element name="PromoDescription" type="xsd:string"/>
				<xsd:element name="PromoAgreement" type="pd:PromoAgreementType"/>
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
	<xsd:element name="PromoDiscountRequest">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element ref="common:Request"/>
				<xsd:element name="AgreementAcceptanceCode" type="xsd:string"/>
