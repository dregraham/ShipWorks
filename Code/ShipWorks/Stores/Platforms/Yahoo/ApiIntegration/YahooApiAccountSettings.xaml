<UserControl x:Class="ShipWorks.Stores.Platforms.Yahoo.ApiIntegration.YahooApiAccountSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShipWorks.Stores.Platforms.Yahoo.ApiIntegration"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBlock>Please enter your Yahoo store ID and access token</TextBlock>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0">Store ID:</TextBlock>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding YahooStoreID}"></TextBox>
            <TextBlock Grid.Row="1" Grid.Column="0">Access Token:</TextBlock>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding AccessToken}"></TextBox>
        </Grid>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0">Enter order number to start next download from</TextBlock>
            <TextBox Grid.Column="1" Text="{Binding BackupOrderNumber}"></TextBox>
        </Grid>

        </StackPanel>
</UserControl>
