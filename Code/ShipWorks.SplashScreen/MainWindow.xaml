<Window x:Class="ShipWorks.SplashScreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="ShipWorks"
        Height="255"
        Width="505"
        FontFamily="Tahoma"
        FontSize="12"
        Foreground="Gray">
    <Window.Background>
        <ImageBrush ImageSource="/ShipWorks.SplashScreen;component/background.png"/>
    </Window.Background>
    <Grid Margin="20 0 0 20"
          VerticalAlignment="Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock Background="Transparent"
                   Text="ShipWorks is currently updating. Please wait."/>
        <TextBlock Margin="0 40 0 0">
            <Run x:Name="Status"
                 Background="Transparent"/>
        </TextBlock>
    </Grid>
</Window>
