<UserControl x:Class="ShipWorks.SingleScan.ScannerRegistrationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ShipWorks.SingleScan"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             MaxWidth="500"
             Background="{x:Static SystemColors.ControlBrush}"
             DataContext="RegisterScannerDlgViewModel"
             FontFamily="Tahoma"
             FontSize="8.25pt"
             d:DataContext="{d:DesignInstance local:ScannerRegistrationControlViewModel}"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   Margin="5"
                   TextWrapping="Wrap">
            ShipWorks must register a barcode scanner to use with Single Scan mode.
            When Single Scan is enabled, ShipWorks will handle scans from this device.
            All you need to do is scan any barcode using a barcode scanner attached to this
            computer and click &quot;Confirm&quot;. If you register the wrong device, scan
            a barcode with the correct one; we will register the most recently used device.
        </TextBlock>
        <TextBlock Grid.Row="1"
                   Margin="5 10 5 10"
                   VerticalAlignment="Center"
                   FontSize="16pt">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ResultFound}" Value="False">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard Name="pickIn">
                                    <Storyboard Duration="0:0:1" RepeatBehavior="Forever">
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Text">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:00" Value="Waiting for scan." />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:00.33" Value="Waiting for scan.." />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:00.66" Value="Waiting for scan..." />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="pickIn" />
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ResultFound}" Value="True">
                            <Setter Property="Text" Value="{Binding Path=ScanResult, StringFormat=Scan Result:{0}}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <StackPanel Grid.Row="2"
                    Margin="0 5 0 5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
            <Button Width="75"
                    Height="25"
                    Margin="5 0 5 0"
                    Command="{Binding SaveScannerCommand}"
                    Content="Confirm"
                    IsDefault="True"
                    IsEnabled="{Binding ResultFound}" />
            <Button Width="75"
                    Height="25"
                    Margin="0 0 5 0"
                    Command="{Binding CancelCommand}"
                    Content="Cancel"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</UserControl>



