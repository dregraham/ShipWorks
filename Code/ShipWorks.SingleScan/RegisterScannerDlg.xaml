<src:InteropWindow x:Class="ShipWorks.SingleScan.RegisterScannerDlg"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:local="clr-namespace:ShipWorks.SingleScan"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:src="clr-namespace:Interapptive.Shared.UI;assembly=Interapptive.Shared"
               xmlns:ui="http://schemas.shipworks.com/ui"
               Title="Register barcode scanner for Single Scan"
               Width="500"
               Background="{x:Static SystemColors.ControlBrush}"
               DataContext="RegisterScannerDlgViewModel"
               FontFamily="Tahoma"
               FontSize="8.25pt"
               ShowInTaskbar="False"
               SizeToContent="Height"
               WindowStartupLocation="CenterOwner"
               WindowStyle="ToolWindow"
               d:DataContext="{d:DesignInstance local:RegisterScannerDlgViewModel}"
               d:DesignHeight="200"
               d:DesignWidth="500"
               mc:Ignorable="d">
    <Window.Resources>
        <ui:BooleanToVisibilityConverter x:Key="VisibleWhenTrue" />
        <ui:BooleanToVisibilityConverter x:Key="VisibleWhenFalse" Invert="True" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   Margin="5"
                   TextWrapping="Wrap">
            ShipWorks must register a barcode scanner to use with Single Scan mode.
            When Single Scan is enabled, ShipWorks will handle scans from this device.
            All you need to do is scan any barcode using a barcode scanner attached to this
            computer and click &quot;Confirm&quot;. If you register the wrong device, scan
            a barcode with the correct one; we will register the most recently used device.
        </TextBlock>
        <Label Grid.Row="1"
               VerticalAlignment="Center"
               Content="{Binding WaitingMessage,
                                 UpdateSourceTrigger=PropertyChanged}"
               FontSize="16pt"
               Visibility="{Binding ResultFound,
                                    Converter={StaticResource VisibleWhenFalse}}"
               d:IsHidden="false" />
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Visibility="{Binding ResultFound,
                                         Converter={StaticResource VisibleWhenTrue}}"
                    d:IsHidden="false">
            <Label Content="Scan result:" FontSize="16pt" />
            <Label Content="{Binding ScanResult, UpdateSourceTrigger=PropertyChanged}" FontSize="16pt" />
        </StackPanel>
        <StackPanel Grid.Row="2"
                    Margin="0 5 0 5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
            <Button Width="75"
                    Height="25"
                    Margin="5 0 5 0"
                    Command="{Binding SaveScannerCommand}"
                    Content="Confirm"
                    IsDefault="True"
                    IsEnabled="{Binding ResultFound}" />
            <Button Width="75"
                    Height="25"
                    Margin="0 0 5 0"
                    Content="Cancel"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</src:InteropWindow>



