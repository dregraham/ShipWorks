<UserControl x:Class="ShipWorks.Stores.UI.Platforms.Yahoo.ApiIntegration.WizardPages.YahooApiAccountPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:ShipWorks.UI.ValueConverters;assembly=ShipWorks.UI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wizardPages="clr-namespace:ShipWorks.Stores.UI.Platforms.Yahoo.ApiIntegration.WizardPages"
             xmlns:yahooValidation="clr-namespace:ShipWorks.Stores.UI.Platforms.Yahoo"
             FontFamily="Tahoma"
             FontSize="11"
             d:DataContext="{d:DesignInstance wizardPages:YahooApiAccountPageViewModel}"
             d:DesignHeight="200"
             d:DesignWidth="400"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:EnumImageConverter x:Key="EnumImage" />
        <converters:VisibleWhenEqualToParameterConverter x:Key="VisibleWhenEqualToParameter" />
        <converters:VisibleWhenEqualToParameterConverter x:Key="VisibleWhenNotEqualToParameter" Invert="true" />
    </UserControl.Resources>
    <StackPanel Margin="24,8,24,8">
        <StackPanel.Resources>
            <Style x:Key="Section" TargetType="FrameworkElement">
                <Setter Property="Margin" Value="0,0,0,8" />
            </Style>
        </StackPanel.Resources>
        <TextBlock Style="{StaticResource Section}">Please enter your Yahoo store ID and access token:</TextBlock>
        <Grid Margin="24,0,24,8" Style="{StaticResource Section}">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Margin" Value="0,0,8,0" />
                    <Setter Property="HorizontalAlignment" Value="Right" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="Margin" Value="0,2,0,2" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="Padding" Value="2,2,2,2" />
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0">Store ID:</TextBlock>
            <TextBox Grid.Row="0"
                     Grid.Column="1"
                     MaxLength="50"
                     Text="{Binding YahooStoreID,
                                    UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Grid.Row="1" Grid.Column="0">Access Token:</TextBlock>
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     MaxLength="200"
                     Text="{Binding AccessToken,
                                    UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" VerticalAlignment="Center">Download orders starting from order number:</TextBlock>
            <TextBox Grid.Column="1"
                     Margin="8,0,4,0"
                     VerticalAlignment="Center"
                     MaxLength="19"
                     Padding="2,2,2,2"
                     Text="{Binding BackupOrderNumber,
                                    UpdateSourceTrigger=PropertyChanged}" />
            <Image Grid.Column="2"
                   VerticalAlignment="Center"
                   Source="{Binding IsValid,
                                    Converter={StaticResource EnumImage}}"
                   Stretch="None"
                   Visibility="{Binding IsValid,
                                        Converter={StaticResource VisibleWhenNotEqualToParameter},
                                        ConverterParameter={x:Static yahooValidation:YahooOrderNumberValidation.Validating}}" />
            <Image Grid.Column="2"
                   RenderTransformOrigin=".5,.5"
                   Source="/Shipworks.Core;component/Resources/Progress/circle_ball_blue.gif"
                   Stretch="None"
                   Visibility="{Binding IsValid,
                                        Converter={StaticResource VisibleWhenEqualToParameter},
                                        ConverterParameter={x:Static yahooValidation:YahooOrderNumberValidation.Validating}}">
                <Image.RenderTransform>
                    <RotateTransform x:Name="AnimatedRotateTransform" Angle="0" />
                </Image.RenderTransform>
                <Image.Triggers>
                    <EventTrigger RoutedEvent="Control.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation By="10"
                                                 Duration="0:0:1"
                                                 RepeatBehavior="Forever"
                                                 Storyboard.TargetName="AnimatedRotateTransform"
                                                 Storyboard.TargetProperty="Angle"
                                                 To="360" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Image.Triggers>
            </Image>
            <TextBlock Grid.Column="3"
                       Margin="8, 0, 4, 0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="Red"
                       Text="{Binding ValidationErrorMessage}" />
        </Grid>
        <TextBlock Margin="0,8,0,0" Style="{StaticResource Section}">
            <Run>For help adding your Yahoo store,</Run>
            <Hyperlink NavigateUri="{Binding HelpUrl}" RequestNavigate="HyperlinkOnRequestNavigate">click here</Hyperlink>
        </TextBlock>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180" />
                <ColumnDefinition Width="26" />
                <ColumnDefinition Width="43" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Grid.ColumnSpan="3"
                       Margin="0,10,8,1"
                       VerticalAlignment="Center"
                       Text="ShipWorks Yahoo Partner ID: ypa-005343935941" />
            <Button Grid.Column="3"
                    Margin="0, 8, 0, 0"
                    VerticalAlignment="Center"
                    Click="ButtonBaseOnClick"
                    Padding="3">
                Copy to Clipboard
            </Button>
        </Grid>
    </StackPanel>
</UserControl>
