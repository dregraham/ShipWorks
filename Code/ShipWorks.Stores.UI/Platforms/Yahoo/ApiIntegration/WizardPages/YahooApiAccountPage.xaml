<UserControl x:Class="ShipWorks.Stores.UI.Platforms.Yahoo.ApiIntegration.WizardPages.YahooApiAccountPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="clr-namespace:ShipWorks.UI.Behaviors;assembly=ShipWorks.UI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:valueConverters="clr-namespace:ShipWorks.UI.ValueConverters;assembly=ShipWorks.UI"
             xmlns:wizardPages="clr-namespace:ShipWorks.Stores.UI.Platforms.Yahoo.ApiIntegration.WizardPages"
             xmlns:yahooValidation="clr-namespace:ShipWorks.Stores.UI.Platforms.Yahoo"
             FontFamily="Tahoma"
             FontSize="11"
             d:DataContext="{d:DesignInstance wizardPages:YahooApiAccountPageViewModel}"
             d:DesignHeight="200"
             d:DesignWidth="400"
             mc:Ignorable="d">
    <UserControl.Resources>
        <valueConverters:VisibleWhenEqualToParameterConverter x:Key="VisibleWhenEqualToParameter" />
    </UserControl.Resources>
    <StackPanel Margin="24,8,24,8">
        <StackPanel.Resources>
            <Style x:Key="Section" TargetType="{x:Type FrameworkElement}">
                <Setter Property="Margin" Value="0,0,0,8" />
            </Style>
            <Style TargetType="{x:Type TextBox}">
                <Setter Property="Margin" Value="0,2,0,2" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Padding" Value="2,2,2,2" />
            </Style>
        </StackPanel.Resources>
        <TextBlock Style="{StaticResource Section}"><Run Text="Please enter your Yahoo store ID and access token:" />
        </TextBlock>
        <Grid Margin="24,0,24,8">
            <Grid.Resources>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Margin" Value="0,0,8,0" />
                    <Setter Property="HorizontalAlignment" Value="Right" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
            </Grid.Resources>
            <Grid.Style>
                <StaticResource ResourceKey="Section" />
            </Grid.Style>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0"><Run Text="Store ID:" />
            </TextBlock>
            <TextBox Grid.Row="0"
                     Grid.Column="1"
                     MaxLength="50"
                     Text="{Binding YahooStoreID,
                                    UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Grid.Row="1" Grid.Column="0"><Run Text="Access Token:" />
            </TextBlock>
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     MaxLength="200"
                     Text="{Binding AccessToken,
                                    UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="22" />
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style TargetType="{x:Type Image}">
                    <Setter Property="HorizontalAlignment" Value="Right" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="Stretch" Value="None" />
                </Style>
            </Grid.Resources>
            <TextBlock Grid.Column="0" VerticalAlignment="Center">
                <Run Text="Download orders starting from order number:" />
            </TextBlock>
            <TextBox Grid.Column="1"
                     Margin="8,0,4,0"
                     VerticalAlignment="Center"
                     MaxLength="19"
                     Text="{Binding BackupOrderNumber,
                                    TargetNullValue={x:Static sys:String.Empty},
                                    UpdateSourceTrigger=PropertyChanged}">
                <i:Interaction.Behaviors>
                    <behaviors:TextBoxInputRegExBehavior EmptyValue=""
                                                         MaxLength="19"
                                                         RegularExpression="^-?\d+(,\d+)*(\.\d+(e\d+)?)?(\.)?$" />
                </i:Interaction.Behaviors>
            </TextBox>
            <Image Grid.Column="2"
                   Source="/Shipworks.Core;component/Resources/check.png"
                   Visibility="{Binding IsValid,
                                        Converter={StaticResource VisibleWhenEqualToParameter},
                                        ConverterParameter={x:Static yahooValidation:YahooOrderNumberValidation.Valid}}" />
            <Image Grid.Column="2"
                   Source="/Shipworks.Core;component/Resources/error.png"
                   Visibility="{Binding IsValid,
                                        Converter={StaticResource VisibleWhenEqualToParameter},
                                        ConverterParameter={x:Static yahooValidation:YahooOrderNumberValidation.Invalid}}" />
            <Image Grid.Column="2"
                   RenderTransformOrigin=".5,.5"
                   Source="/Shipworks.Core;component/Resources/Progress/circle_ball_blue.gif"
                   Visibility="{Binding IsValid,
                                        Converter={StaticResource VisibleWhenEqualToParameter},
                                        ConverterParameter={x:Static yahooValidation:YahooOrderNumberValidation.Validating}}">
                <Image.RenderTransform>
                    <RotateTransform x:Name="AnimatedRotateTransform" Angle="0" />
                </Image.RenderTransform>
                <Image.Triggers>
                    <EventTrigger RoutedEvent="Control.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation By="10"
                                                 Duration="0:0:1"
                                                 RepeatBehavior="Forever"
                                                 Storyboard.TargetName="AnimatedRotateTransform"
                                                 Storyboard.TargetProperty="Angle"
                                                 To="360" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Image.Triggers>
            </Image>
            <TextBlock Grid.Column="3"
                       Margin="8, 0, 4, 0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="Red"
                       Text="{Binding ValidationErrorMessage}"
                       Visibility="{Binding IsValid,
                                            Converter={StaticResource VisibleWhenEqualToParameter},
                                            ConverterParameter={x:Static yahooValidation:YahooOrderNumberValidation.NotValidated}}" />
        </Grid>
        <TextBlock Margin="0,8,0,0" Style="{StaticResource Section}">
            <Run>For help adding your Yahoo store,</Run>
            <Hyperlink NavigateUri="{Binding HelpUrl}" RequestNavigate="HyperlinkOnRequestNavigate">click here.</Hyperlink>
        </TextBlock>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Margin="0, 8, 0, 0"
                       VerticalAlignment="Center"
                       Text="ShipWorks Yahoo Partner ID: " />
            <TextBox Grid.Column="1"
                     Margin="0, 8, 0, 0"
                     HorizontalAlignment="Center"
                     IsReadOnly="True"
                     Text="ypa-005343935941" />
            <Button Grid.Column="2"
                    Margin="8, 8, 0, 0"
                    VerticalAlignment="Center"
                    Click="ButtonBaseOnClick"
                    Padding="3">
                Copy to Clipboard
            </Button>
        </Grid>
    </StackPanel>
</UserControl>
