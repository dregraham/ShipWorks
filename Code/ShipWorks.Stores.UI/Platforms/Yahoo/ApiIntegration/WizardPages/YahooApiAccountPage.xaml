<UserControl x:Class="ShipWorks.Stores.UI.Platforms.Yahoo.ApiIntegration.WizardPages.YahooApiAccountPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wizardPages="clr-namespace:ShipWorks.Stores.UI.Platforms.Yahoo.ApiIntegration.WizardPages"
             xmlns:converters ="clr-namespace:ShipWorks.UI.ValueConverters;assembly=ShipWorks.UI"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance wizardPages:YahooApiAccountPageViewModel}"
             d:DesignHeight="200" d:DesignWidth="200">
    <UserControl.Resources>
        <converters:EnumImageConverter x:Key="EnumImage"/>
    </UserControl.Resources>            
    <StackPanel Margin="0,0,-90,0">
        <TextBlock>Please enter your Yahoo store ID and access token</TextBlock>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0">Store ID:</TextBlock>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding YahooStoreID}"></TextBox>
            <TextBlock Grid.Row="1" Grid.Column="0">Access Token:</TextBlock>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding AccessToken}"></TextBox>
        </Grid>
        <TextBlock>
            <Run>For help adding your Yahoo store,</Run> 
            <Hyperlink NavigateUri="{Binding HelpUrl}" RequestNavigate="Hyperlink_OnRequestNavigate">click here</Hyperlink>
        </TextBlock>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0">Download orders starting from order number:</TextBlock>
            <TextBox Grid.Column="1" Text="{Binding BackupOrderNumber}"></TextBox>
            <Image Grid.Column="2" Source="{Binding IsValid, Converter={StaticResource EnumImage}}"> </Image>
        </Grid>
        
        
    </StackPanel>
    
</UserControl>
