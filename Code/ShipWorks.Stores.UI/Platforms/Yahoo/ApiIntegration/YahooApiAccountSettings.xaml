<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:valueConverters="clr-namespace:ShipWorks.UI.ValueConverters;assembly=ShipWorks.UI"
             xmlns:local="clr-namespace:ShipWorks.Stores.UI.Platforms.Yahoo.ApiIntegration" x:Class="ShipWorks.Stores.UI.Platforms.Yahoo.ApiIntegration.YahooApiAccountSettings"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:YahooApiAccountSettingsViewModel}"
             d:DesignHeight="300" d:DesignWidth="400"
             FontFamily="Tahoma" FontSize="11">
    <UserControl.Resources>
        <valueConverters:EnumImageConverter x:Key="EnumImage"/>
    </UserControl.Resources>
    <StackPanel Margin="24,8,24,8">
        <StackPanel.Resources>
            <Style x:Key="Section" TargetType="{x:Type FrameworkElement}">
                <Setter Property="Margin" Value="0,0,0,8"/>
            </Style>
        </StackPanel.Resources>
        <TextBlock Style="{StaticResource Section}"><Run Text="Please enter your Yahoo store ID and access token:"/></TextBlock>
        <Grid Margin="24,0,24,8">
            <Grid.Resources>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Margin" Value="0,0,8,0"/>
                    <Setter Property="HorizontalAlignment" Value="Right"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Margin" Value="0,2,0,2"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="2,2,2,2"/>
                </Style>
            </Grid.Resources>
            <Grid.Style>
                <StaticResource ResourceKey="Section"/>
            </Grid.Style>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0"><Run Text="Store ID:"/></TextBlock>
            <TextBox Grid.Row="0"
                     Grid.Column="1"
                     MaxLength="50"
                     Text="{Binding YahooStoreID, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Grid.Row="1" Grid.Column="0"><Run Text="Access Token:"/></TextBlock>
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Text="{Binding AccessToken, UpdateSourceTrigger=PropertyChanged}"
                     MaxLength="200"/>
        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
				VerticalAlignment="Center">
                <Run Text="Download orders starting from order number:"/>
            </TextBlock>
            <TextBox Grid.Column="1"
				Text="{Binding BackupOrderNumber, UpdateSourceTrigger=PropertyChanged}"
				Margin="8,0,4,0"
				VerticalAlignment="Center"
                MaxLength="19"
				Padding="2,2,2,2"/>
            <Image Grid.Column="2"
				Source="{Binding IsValid, Converter={StaticResource EnumImage}}"
				VerticalAlignment="Center"
                HorizontalAlignment="Right"
				Stretch="None"/>
            <TextBlock Grid.Column="3" HorizontalAlignment="Center"
                   Text="{Binding ValidationErrorMessage}"
                   Margin="8, 0, 4, 0"
                   VerticalAlignment="Center"
                   Foreground="Red"/>
            </Grid>

    </StackPanel>
</UserControl>
