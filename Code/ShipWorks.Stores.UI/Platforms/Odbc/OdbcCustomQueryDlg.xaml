<Window x:Class="ShipWorks.Stores.UI.Platforms.Odbc.OdbcCustomQueryDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:odbc="clr-namespace:ShipWorks.Stores.UI.Platforms.Odbc"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance odbc:OdbcCustomQueryDlgViewModel}"
        SizeToContent="Height"
        Width="450"
        FontFamily="Tahoma" FontSize="11px"
        Background="{x:Static SystemColors.ControlBrush}"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Title="ODBC Custom Import"
        WindowStyle="ToolWindow"
        FocusManager.FocusedElement="{Binding ElementName=Query}">
    <Window.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="5 0 0 0" />
            <Setter Property="Padding" Value="5 2 5 2" />
            <Setter Property="Width" Value="85" />
            <Setter Property="Height" Value="24" />
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Your query for custom import" />
        <TextBox x:Name="Query" Grid.Row="1" TextWrapping="Wrap"
                 Height="150"
                 Margin="0 5 0 10"
                 Text="{Binding Query, UpdateSourceTrigger=LostFocus}"
                 FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}" />
        <Label Grid.Row="2" Content="Query Results" HorizontalAlignment="Left" />
        <Button Grid.Row="2" Content="Execute Query" HorizontalAlignment="Right"
                Command="{Binding Execute}" />
        <StackPanel Grid.Row="3" Height="150" Margin="0 10 0 10" Background="White">
            <DataGrid MaxHeight="150"
                  ItemsSource="{Binding Results, UpdateSourceTrigger=PropertyChanged}"
                  IsReadOnly="True" />
            <Label Content="{Binding ResultMessage, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Command="{Binding Ok}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type odbc:OdbcCustomQueryDlg}}}" />
            <Button Content="Cancel"
                    Command="{Binding Cancel}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type odbc:OdbcCustomQueryDlg}}}" />
        </StackPanel>
    </Grid>
</Window>