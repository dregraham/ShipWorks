<UserControl x:Class="ShipWorks.Stores.UI.Platforms.Odbc.Controls.OdbcHubControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ShipWorks.Stores.UI.Platforms.Odbc.Controls"
             xmlns:ui="http://schemas.shipworks.com/ui"
             xmlns:viewModels="clr-namespace:ShipWorks.Stores.UI.Platforms.Odbc.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:OdbcHubViewModel}"
             d:DesignHeight="500" d:DesignWidth="500">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ShipWorks.UI;component/Styles/BlueSteel/BlueSteelStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <ui:BooleanToVisibilityConverter x:Key="ShowWhenTrue" />
            <ui:BooleanToVisibilityConverter x:Key="ShowWhenFalse" Invert="True" />
            <Style TargetType="TextBlock" BasedOn="{StaticResource StandardText}"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="10" Grid.IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   Text="Select the ODBC store you would like to connect to"
                   Margin="0 0 0 10"/>
        <ListBox
            Grid.Row="1"
            HorizontalContentAlignment="Stretch"
            ItemsSource="{Binding Stores}"
            SelectedItem="{Binding SelectedStore}"
            Visibility="{Binding LoadingFinished, Converter={StaticResource ResourceKey=ShowWhenTrue}}"
            Style="{StaticResource BlueSteel.ListBox.SingleSelection}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Name" />
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Address" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            Margin="0,0,18,4"
                            VerticalAlignment="Top">
                            <TextBlock FontSize="14" Text="{Binding Name}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock
            Grid.Row="1"
            Margin="4"
            Text="{Binding Message}"
            Visibility="{Binding ShowMessage, Converter={StaticResource ResourceKey=ShowWhenTrue}}" />
        

        <TextBlock
            Grid.Row="2"
            Margin="0 10 0 5"
            Text="Want to add a new ODBC store?"/>

        <Button
            Grid.Row="3"
            Command="{Binding NewStoreCommand}"
            Content="Add new store"
            Style="{StaticResource SmallButton}"
            HorizontalAlignment="Left"
            Width="150"/>
    </Grid>
</UserControl>
