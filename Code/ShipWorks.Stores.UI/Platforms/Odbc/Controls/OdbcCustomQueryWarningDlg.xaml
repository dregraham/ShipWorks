<Window x:Class="ShipWorks.Stores.UI.Platforms.Odbc.Controls.OdbcCustomQueryWarningDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Custom Query Warning"
        Width="450"
        Background="{x:Static SystemColors.ControlBrush}"
        FontFamily="tahoma"
        FontSize="8.25pt"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0"
                   Width="20"
                   Height="20"
                   Margin="10 0 0 0"
                   Source="/Shipworks.Core;component/Resources/warning1.png" />
            <TextBlock Grid.Column="1"
                       Margin="10"
                       TextWrapping="Wrap">
                Custom Query is an advanced feature meant to be used by customers who
                are familiar with SQL, databases, etc. The software does not validate
                the queries used and incorrectly specified queries may adversely affect
                or corrupt your data.
                <Hyperlink NavigateUri="http://support.shipworks.com/support/solutions/articles/4000083207" RequestNavigate="OpenLink">More info...</Hyperlink>
            </TextBlock>
        </Grid>
        <Button Grid.Row="1"
                Width="80"
                Height="24"
                Margin="0 0 10 10"
                HorizontalAlignment="Right"
                Click="CloseWindow"
                Content="OK" IsDefault="True" />
    </Grid>
</Window>
