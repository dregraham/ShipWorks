<UserControl x:Class="ShipWorks.Stores.UI.Platforms.Odbc.WizardPages.OdbcImportMapSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ShipWorks.Stores.UI.Platforms.Odbc.WizardPages"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:odbc="clr-namespace:ShipWorks.Stores.UI.Platforms.Odbc"
             mc:Ignorable="d"
             xmlns:ui="http://schemas.shipworks.com/ui"
             d:DataContext="{d:DesignInstance odbc:OdbcImportFieldMappingControlViewModel}"
             Height="500" Width="540"
             FontFamily="Tahoma" FontSize="8.25pt"
             Background="{x:Static SystemColors.ControlBrush}">
    <Control.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="Margin" Value="0 5 0 5" />
        </Style>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Margin" Value="0 5 0 5" />
            <Setter Property="Padding" Value="1 4 0 4" />
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="5 5 0 5" />
            <Setter Property="Padding" Value="5 2 5 2" />
            <Setter Property="Width" Value="85" />
        </Style>
        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="Margin" Value="0 5 0 5" />
            <Setter Property="Padding" Value="4 4 0 4" />
            <Setter Property="Height" Value="24"/>
        </Style>
        <Style TargetType="{x:Type RadioButton}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0 0 5 0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
        <ui:VisibleWhenEqualToParameterConverter x:Key="VisibleWhenEqualToParameterConverter" />
    </Control.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0"
                   Margin="0 0 0 5"
               FontWeight="Bold" Content="Map Settings"/>
            <Label Grid.Row="1" Grid.Column="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right" Content="Name:"/>
            <TextBox Grid.Row="1" Grid.Column="1"
                     Margin="0 5 0 5"
                     Text="{Binding MapName, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     Height="24"/>
            <Button Grid.Row="1" Grid.Column="2"
                Content="Load Map..."
                Command="{Binding SaveMapCommand}"/>

            <Label Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Content="Download:"/>

            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                <RadioButton GroupName="DownloadStrategy"
                             Content="Orders by last modified date"
                             IsChecked="{Binding IsDownloadStrategyLastModified, UpdateSourceTrigger=PropertyChanged}" />
                <RadioButton GroupName="DownloadStrategy"
                             Content="All orders"/>
            </StackPanel>

            <Label Grid.Row="3" Grid.Column="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Content="Column Source:"/>

            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                <RadioButton GroupName="ColumnSource"
                             Content="Table"
                             IsChecked="{Binding IsCustomQuerySelected, UpdateSourceTrigger=PropertyChanged}" />
                <RadioButton GroupName="ColumnSource"
                             Content="Query" />
            </StackPanel>
        </Grid>

        <DockPanel Grid.Row="1"
                   d:IsHidden="false"
                   VerticalAlignment="Top">
            <DockPanel.Visibility>
                <Binding Path="IsCustomQuerySelected"
                         Converter="{StaticResource VisibleWhenEqualToParameterConverter}">
                    <Binding.ConverterParameter>
                        <system:Boolean>False</system:Boolean>
                    </Binding.ConverterParameter>
                </Binding>
            </DockPanel.Visibility>
            <Label HorizontalContentAlignment="Right"
                   VerticalAlignment="Center"
                   Content="Table:"
                   Margin="0"
                   Width="90"/>
            <ComboBox ItemsSource="{Binding ColumnSources, UpdateSourceTrigger=PropertyChanged}"
                      DisplayMemberPath="Name"
                      SelectedValue="{Binding SelectedTable}"
                      VerticalAlignment="Center">
                <i:Interaction.Behaviors>
                    <ui:ComboBoxSelectionChangedBehavior Command="{Binding TableChangedCommand}" />
                </i:Interaction.Behaviors>
            </ComboBox>
        </DockPanel>

        <Grid Grid.Row="1"
              d:IsHidden="true">
            <Grid.Visibility>
                <Binding Path="IsCustomQuerySelected"
                         Converter="{StaticResource VisibleWhenEqualToParameterConverter}">
                    <Binding.ConverterParameter>
                        <system:Boolean>True</system:Boolean>
                    </Binding.ConverterParameter>
                </Binding>
            </Grid.Visibility>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Your query for custom import"
                   Margin="0 5 0 5"/>
            <TextBox x:Name="Query" Grid.Row="1"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Margin="0 5 0 5"
                 Text="{Binding Query, UpdateSourceTrigger=LostFocus}"
                 FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}" />
            <Label Grid.Row="2" Content="Query Results" HorizontalAlignment="Left" />
            <Button Grid.Row="2" Content="Execute Query" HorizontalAlignment="Right"
                Command="{Binding Execute}" />
            <Grid Grid.Row="3" Margin="0 5 0 0" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <DataGrid Grid.Row="0" ItemsSource="{Binding Results, UpdateSourceTrigger=PropertyChanged}"
                  IsReadOnly="True" />
                <Label Grid.Row="0"
                   Content="{Binding ResultMessage, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </Grid>



    </Grid>
</UserControl>
