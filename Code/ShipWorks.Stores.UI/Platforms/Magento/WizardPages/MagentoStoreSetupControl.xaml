<UserControl x:Class="ShipWorks.Stores.UI.Platforms.Magento.WizardPages.MagentoStoreSetupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:ui="http://schemas.shipworks.com/ui"
             xmlns:wizardPages="clr-namespace:ShipWorks.Stores.UI.Platforms.Magento.WizardPages"
             Background="{x:Static SystemColors.ControlBrush}"
             FontFamily="Tahoma"
             FontSize="11"
             d:DataContext="{d:DesignInstance wizardPages:MagentoStoreSetupControlViewModel}"
             d:DesignHeight="500"
             d:DesignWidth="500"
             mc:Ignorable="d">
    <Control.Resources>
        <ui:BooleanToGridRowHeightConverter x:Key="BooleanToGridRowHeightConverter" Invert="False" />
        <ui:RadioButtonCheckedConverter x:Key="RadioButtonCheckedConverter" />
        <system:Boolean x:Key="True">True</system:Boolean>
        <system:Boolean x:Key="False">False</system:Boolean>
    </Control.Resources>
    <Grid Margin="20 10 10 10">
        <Grid.Resources>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="Margin" Value="4" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
            <Style TargetType="{x:Type TextBox}">
                <Setter Property="Margin" Value="4" />
                <Setter Property="Padding" Value="2" />
            </Style>
            <Style TargetType="{x:Type PasswordBox}">
                <Setter Property="Margin" Value="4" />
                <Setter Property="Padding" Value="2" />
            </Style>
            <Style TargetType="{x:Type RadioButton}">
                <Setter Property="Margin" Value="20 4 0 4" />
            </Style>
        </Grid.Resources>
        <StackPanel Margin="0">
            <StackPanel>
                <TextBlock FontWeight="Bold" Text="Version" />
                <RadioButton Content="Magento 1"
                             GroupName="Version"
                             IsChecked="{Binding IsMagento1,
                                                 Converter={StaticResource RadioButtonCheckedConverter},
                                                 ConverterParameter={StaticResource True}}" />
                <RadioButton Content="Magento 2"
                             GroupName="Version"
                             IsChecked="{Binding IsMagento1,
                                                 Converter={StaticResource RadioButtonCheckedConverter},
                                                 ConverterParameter={StaticResource False}}" />
            </StackPanel>
            <StackPanel>
                <TextBlock FontWeight="Bold" Text="Account Credentials" />
                <TextBlock Margin="20 0 0 0" Text="Enter the administrator username and password used to login to your online store:" />
                <Grid Margin="40 0 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="{Binding IsMagento1, Converter={StaticResource BooleanToGridRowHeightConverter}}" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="Username:" />
                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Grid.ColumnSpan="2"
                             Text="{Binding Username,
                                            UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="Password:" />
                    <PasswordBox Grid.Row="1"
                                 Grid.Column="1"
                                 Grid.ColumnSpan="2">
                        <i:Interaction.Behaviors>
                            <ui:PasswordBoxBindingBehavior Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}" />
                        </i:Interaction.Behaviors>
                    </PasswordBox>
                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Text="Store Url:" />
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Grid.ColumnSpan="2"
                             Text="{Binding StoreUrl,
                                            UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               Text="Store code:" />
                    <TextBox Grid.Row="3"
                             Grid.Column="1"
                             Text="{Binding StoreCode,
                                            UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Grid.Row="3"
                               Grid.Column="2"
                               Foreground="Gray"
                               Text="(Only for multi-store Magento installations)" />
                    <TextBlock Grid.Row="4"
                               Grid.Column="1"
                               Grid.ColumnSpan="2">
                        <Run>For help adding your Magento store,</Run>
                        <Hyperlink NavigateUri="http://support.shipworks.com/support/solutions/articles/4000049745" RequestNavigate="HyperlinkOnRequestNavigate">click here.</Hyperlink>
                    </TextBlock>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>

