<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:ShipWorks.Stores.UI.Platforms.Magento" 
             xmlns:ui="http://schemas.shipworks.com/ui"
            xmlns:magentoEnums="clr-namespace:ShipWorks.Stores.Platforms.Magento.Enums;assembly=ShipWorks.Core" 
            x:Class="ShipWorks.Stores.UI.Platforms.Magento.MagentoAccountSettingsControl"
             Background="White"
             d:DesignHeight="500"
             d:DesignWidth="500"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:MagentoAccountSettingsControlViewModel}"
             >
    <Control.Resources>
        <ui:RadioButtonCheckedConverter x:Key="RadioButtonCheckedConverter" />
        <magentoEnums:MagentoVersion x:Key="PhpFile">PhpFile</magentoEnums:MagentoVersion>
        <magentoEnums:MagentoVersion x:Key="MagentoConnect">MagentoConnect</magentoEnums:MagentoVersion>
        <magentoEnums:MagentoVersion x:Key="MagentoTwo">MagentoTwo</magentoEnums:MagentoVersion>
        <magentoEnums:MagentoVersion x:Key="MagentoTwoREST">MagentoTwoREST</magentoEnums:MagentoVersion>
    </Control.Resources>
    <Grid Margin="10">
        <Grid.Resources>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="Margin" Value="4" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
            <Style TargetType="{x:Type TextBox}">
                <Setter Property="Margin" Value="4" />
                <Setter Property="Padding" Value="2" />
            </Style>
            <Style TargetType="{x:Type RadioButton}">
                <Setter Property="Margin" Value="20 4 0 4" />
            </Style>
        </Grid.Resources>
        <StackPanel Margin="0">
            <StackPanel>
                <TextBlock FontWeight="Bold" Text="Version" />
                <RadioButton Content="Magento 1 Module" GroupName="Version" 
                             IsChecked="{Binding MagentoVersion,
                                            Converter={StaticResource RadioButtonCheckedConverter},
                                            ConverterParameter={StaticResource PhpFile}}" />
                <RadioButton Content="Magento 1 Connect" GroupName="Version" 
                             IsChecked="{Binding MagentoVersion,
                                            Converter={StaticResource RadioButtonCheckedConverter},
                                            ConverterParameter={StaticResource MagentoConnect}}"/>
                <RadioButton Content="Magento 2 Module" GroupName="Version" 
                             IsChecked="{Binding MagentoVersion,
                                            Converter={StaticResource RadioButtonCheckedConverter},
                                            ConverterParameter={StaticResource MagentoTwo}}"/>
                <RadioButton Content="Magento 2 REST API" GroupName="Version" 
                             IsChecked="{Binding MagentoVersion,
                                            Converter={StaticResource RadioButtonCheckedConverter},
                                            ConverterParameter={StaticResource MagentoTwoREST}}"/>
            </StackPanel>
            <StackPanel>
                <TextBlock FontWeight="Bold" Text="Account Credentials" />
                <TextBlock Margin="20 0 0 0" Text="Enter the administrator username and password used to login to your online store:" />
                <Grid Margin="40 0 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="Username:" />
                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Grid.ColumnSpan="2"
                             Margin="4"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="Password:" />
                    <PasswordBox Grid.Row="1"
                             Grid.Column="1"
                             Grid.ColumnSpan="2"
                             Margin="4">
                        <i:Interaction.Behaviors>
                            <ui:PasswordBoxBindingBehavior Password="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        </i:Interaction.Behaviors>
                    </PasswordBox>
                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Text="Store Url:" />
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Grid.ColumnSpan="2" 
                              Text="{Binding StoreUrl, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               Text="Store code:" />
                    <TextBox Grid.Row="3" 
                             Grid.Column="1" 
                             Text="{Binding StoreCode, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Grid.Row="3"
                               Grid.Column="2"
                               Foreground="Gray"
                               Text="(Only for multi-store Magento installations)" />
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>


