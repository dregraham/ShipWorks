<UserControl
    x:Class="ShipWorks.Stores.UI.Platforms.Amazon.AmazonCreateOrderSource"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.shipworks.com/ui"
    mc:Ignorable="d"
    FontStretch="Normal"
    FontStyle="Normal"
    FontWeight="Normal"
    d:DesignHeight="300" d:DesignWidth="600">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ShipWorks.UI;component/Styles/GlobalStyle.xaml" />
                <ResourceDictionary Source="/ShipWorks.UI;component/Styles/BlueSteel/BlueSteelStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="TextBlock" BasedOn="{StaticResource Grid.TextBlock.Label}" />
            
            <Style x:Key="StepBlock" TargetType="FrameworkElement">
                <Setter Property="Margin" Value="0,0,0,16" />
            </Style>
            <Style
                x:Key="StepHeader"
                BasedOn="{StaticResource Header}"
                TargetType="TextBlock">
                <Setter Property="Margin" Value="0,0,0,6" />
            </Style>
            <Style x:Key="StepContents" TargetType="FrameworkElement">
                <Setter Property="Margin" Value="12,0,0,0" />
                <Setter Property="HorizontalAlignment" Value="Left" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,20"
            Style="{StaticResource StandardText}"
            TextWrapping="Wrap">
            Amazon requires you to authorize ShipWorks to connect
            to your Amazon account. This is done by logging into
            a special Amazon page, granting ShipWorks access, and
            copying and pasting the code on the last page into the Order
            Source ID field below. (FIX LINK!!!) For help,&#160;
            <Hyperlink ui:Link.OpenInBrowser="true"
                       NavigateUri="https://shipworks.zendesk.com/hc/en-us/articles/360022466392">
                click here.
            </Hyperlink>
        </TextBlock>
        <StackPanel Grid.Row="1" Style="{StaticResource StepBlock}">
            <TextBlock Style="{StaticResource StepHeader}">1: Create an Order Source ID</TextBlock>
            <Grid Style="{StaticResource StepContents}">
                <Button
                    Padding="8,4"
                    Command="{Binding GetOrderSourceId}"
                    Style="{StaticResource SmallSecondaryButton}"
                    IsEnabled="{Binding OpeningUrl, Converter={ui:InverseBooleanConverter}}">
                    Get Order Source ID
                </Button>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="2" Style="{StaticResource StepBlock}">
            <TextBlock Style="{StaticResource StepHeader}">2: Fill in the Order Source ID</TextBlock>
            <Grid Style="{StaticResource StepContents}">
                <TextBox
                    Width="250"
                    Padding="8,4"
                    Style="{StaticResource BlueSteelTextBox}"
                    Text="{Binding OrderSourceId, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>