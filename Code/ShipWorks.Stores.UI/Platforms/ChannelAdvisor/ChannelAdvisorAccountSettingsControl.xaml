<UserControl x:Class="ShipWorks.Stores.UI.Platforms.ChannelAdvisor.ChannelAdvisorAccountSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ShipWorks.Stores.UI.Platforms.ChannelAdvisor"
             mc:Ignorable="d"
             d:DesignHeight="300" 
             d:DesignWidth="500"
             FontFamily="Tahoma"
             FontSize="11"
             d:DataContext="{d:DesignInstance local:ChannelAdvisorAccountSettingsViewModel}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10px" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10px"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0"
                   Grid.ColumnSpan="3"
                   Grid.Row="0" 
                   TextWrapping="WrapWithOverflow">
            ChannelAdvisor requires you to authorize Shipworks to connect
            to your ChannelAdvisor account. This is done by logging into
            a special ChannelAdvisor page, granting ShipWorks access, and
            copying and pasting the code on the last page into the code field
            below.  For help,
            <Hyperlink
                NavigateUri="http://support.shipworks.com/support/solutions/articles/4000105565-adding-a-channeladvisor-store-oauth-">
                click here.
            </Hyperlink>
        </TextBlock>
        <Button Grid.Row="2" 
                Grid.Column="0" 
                Margin="0 0 12 0" 
                Padding="15 0 15 0"
                Height="23"
                Command="{Binding GetAccessCodeCommand}">
            Get Access Code
        </Button>
        <Label Grid.Row="2" 
               Grid.Column="1" >Access Code:</Label>
        <TextBox Grid.Row="2" 
                 Grid.Column="2"
                 Height="23"
                 VerticalContentAlignment="Center"
                 Text="{Binding AccessCode, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</UserControl>