<UserControl x:Class="ShipWorks.Stores.UI.Platforms.SparkPay.WizardPages.SparkPayAccountControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShipWorks.Stores.UI.Platforms.SparkPay.WizardPages"
             mc:Ignorable="d" 
             FontFamily="Tahoma"
             FontSize="11"
             d:DataContext="{d:DesignInstance local:SparkPayAccountViewModel}"
             d:DesignWidth="500">
    <StackPanel Margin="40 10 10 10">
        <Label Margin="-30 0 0 10">
            Enter your SparkPay account information
        </Label>
        <Grid>
            <Grid.Resources>
                <Style TargetType="TextBox">
                    <Setter Property="Margin" Value="0 2 0 2" />
                    <Setter Property="Padding" Value="2" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">Store URL:</Label>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Url}"/>

            <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right">Access Token:</Label>
            <TextBox Grid.Row="1"  Grid.Column="1" Text="{Binding Token}"/>
        </Grid>
        <TextBlock Margin="80 5 0 0">
            <Run>For help adding your SparkPay store,</Run>
            <Hyperlink NavigateUri="{Binding HelpUrl}" RequestNavigate="HyperlinkOnRequestNavigate">click here.</Hyperlink>
        </TextBlock>
    </StackPanel>
    

</UserControl>
